   </div>
   <div class="bottom-box">
       <div class="section profile-image">
        <form action="/uploadImg" id="img-form-s" method="post" enctype="multipart/form-data">
            <input type="file" name="profilePic" id="img-form">
        </form>
        <div class="img-container">
            <div class="camera">
                <i class="ri-camera-fill"></i>
                <!-- <span>change profile photo</span> -->
            </div>
            <% if (logInUser.profilePic !== '../images/def') { %>
                <img src="/profile/<%= logInUser.profilePic %>" alt="user-image">
            <% } else { %>
                <img src="../images/def.png" alt="user-image">
            <% } %>
              
        </div>
       </div>
       <div class="section">
          <div class="your-name">
            <span>Admin</span>
            <span><%= logInUser.username %></span>
          </div>
       </div>
       <div class="section">
          <div class="your-name">
            <span>Member</span>
            <span><%= logInUser.username %></span>
          </div>
       </div>
