  <div class="top-box">
    <i data-bs-dismiss="offcanvas" data-icon="back" ><svg viewBox="0 0 24 24" height="22" width="22" preserveAspectRatio="xMidYMid meet" class="" version="1.1" x="0px" y="0px" enable-background="new 0 0 24 24"><path fill="currentColor" d="M12,4l1.4,1.4L7.8,11H20v2H7.8l5.6,5.6L12,20l-8-8L12,4z"></path></svg></i>
